<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/ToolbarActDetailNews"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        tools:ignore="UselessParent">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/imgBackActDetailNews"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:rotation="180"
                    app:srcCompat="@drawable/ic_back" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/imgShareActDetailNews"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_share" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/imgFavActDetailNews"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imgShareActDetailNews"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_fav" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/imgCommentActDetailNews"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imgFavActDetailNews"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_comment" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <TextView
            android:id="@+id/lblTitleActDetailNews"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/imgBackActDetailNews"
            android:text="دستور آشپزی"
            android:textColor="@color/colorMenu"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/PageActDetailNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToolbarActDetailNews"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/LineToolbarActDetailNews"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgHeaderActDetailNews"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/lblNameCommandActDetailNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="نام دستور آشپزی"
                    android:textColor="@color/colorMenu"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblValueSeenActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text=" 160"
                            android:textColor="@color/colorMenu" />

                        <TextView
                            android:id="@+id/lblKeySeenActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تعداد مشاهدات:"
                            android:textColor="@color/colorMenu" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/ratingBarActDetailNews"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:progressDrawable="@drawable/rating_bar_layer"
                        android:rating="3" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorMenu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="3.02">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblCalActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ارزش غذایی"
                            android:textColor="@color/colorMenu"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="41dp"
                            android:layout_height="39dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_cal" />


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.01"
                        android:background="@color/colorMenu" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_play" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.01"
                        android:background="@color/colorMenu" />

                    <LinearLayout
                        android:id="@+id/RowGalleryActDetailNews"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_extra_photo" />

                        <TextView
                            android:id="@+id/lblPhotoExtraActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عکس بیشتر"
                            android:textColor="@color/colorMenu"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorMenu" />

                <LinearLayout
                    android:id="@+id/RowTimeActDetailNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="41dp"
                            android:layout_height="39dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_timer" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblTimerOneActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 دقیقه"
                            android:textColor="@color/colorMenu" />

                        <TextView
                            android:id="@+id/lblTimerTwoActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="زمان آمادسازی"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblTimerThreeActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 دقیقه"
                            android:textColor="@color/colorMenu" />

                        <TextView
                            android:id="@+id/lblTimerFourActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="زمان استراحت"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.20"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblTimerFiveActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35 دقیقه"
                            android:textColor="@color/colorMenu" />

                        <TextView
                            android:id="@+id/lblTimerSixActDetailNews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="زمان پخت"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorMenu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerTabActDetailNews"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </LinearLayout>

                <WebView
                    android:id="@+id/WebViewActDetailNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    tools:ignore="WebViewLayout" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/lblCommentActDetailNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="نظرات"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerCommentActDetailNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    tools:targetApi="lollipop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/lblMenuActDetailNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="دستورات مشابه"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        app:mrl_rippleAlpha="0.05"
                        app:mrl_rippleColor="#10000000"
                        app:mrl_rippleRoundedCorners="100dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblAllMenuActDetailNews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="لیست کامل"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerMenuActDetailNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    tools:targetApi="lollipop" />

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgMenuOneActDetailNews"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="10dip" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowProgressActDetailNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressActDetailNews"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/lblProgressActDetailNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="در حال دریافت اطلاعات..."
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>